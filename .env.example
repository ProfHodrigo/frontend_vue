# Exemplo de variáveis de ambiente para o projeto Vue.js
# Copie este arquivo para .env.local e configure suas variáveis

# URL da API do Backend Flask
VITE_API_URL=http://localhost:5000

# URL base da aplicação (usado no build)
VITE_BASE_URL=/

# Ambiente (development, staging, production)
NODE_ENV=development

# Debug do Axios (true/false)
VITE_DEBUG_API=true

# Configurações de autenticação
VITE_TOKEN_EXPIRY_MINUTES=60
VITE_REFRESH_TOKEN_MINUTES=1440

# Configurações de upload (em MB)
VITE_MAX_FILE_SIZE=5

# Google Analytics (opcional)
# VITE_GOOGLE_ANALYTICS=G-XXXXXXXXXX

# Sentry para monitoramento de erros (opcional)
# VITE_SENTRY_DSN=https://xxxxxxxxxx@sentry.io/xxxxxxxxx

# Configurações de desenvolvimento
VITE_DEV_TOOLS=true
VITE_SHOW_DEBUG_INFO=true